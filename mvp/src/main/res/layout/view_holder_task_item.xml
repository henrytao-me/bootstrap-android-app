<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="?attr/selectableItemBackground"
  android:clickable="true"
  style="@style/MdListItem.TwoLine.IconWithText">

  <LinearLayout style="@style/Base.MdListItem.Wrapper">

    <TextView
      android:id="@+id/title"
      tools:text="Two Line - Icon With Text"
      style="@style/Base.MdListItem.Title.Left" />

    <TextView
      android:id="@+id/description"
      tools:text="Subtitle"
      style="@style/Base.MdListItem.Subtitle.Left" />
  </LinearLayout>

  <ImageView
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    app:srcCompat="@drawable/ic_local_offer_black_24dp"
    style="@style/Base.MdListItem.Icon" />
</RelativeLayout>